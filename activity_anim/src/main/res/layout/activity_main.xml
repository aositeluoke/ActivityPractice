<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context="com.aositeluoke.activitypractice.MainActivity">

    <View
        android:id="@+id/view_status_bar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@android:color/holo_purple" />

    <Button
        android:id="@+id/btn_left2right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="右进右出" />


    <Button
        android:id="@+id/btn_dialog_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="对话框Activity" />

    <Button
        android:id="@+id/btn_bottom_in_out_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="底部弹出底部退出Activity" />

    <Button
        android:id="@+id/btn_alpha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="透明度Activity" />

    <Button
        android:id="@+id/btn_scale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="缩放Activity" />

    <Button
        android:id="@+id/btn_sort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="排序"
        android:visibility="gone" />


    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />


    <ImageView
        android:id="@+id/iv_navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@android:color/holo_purple" />


</LinearLayout>
