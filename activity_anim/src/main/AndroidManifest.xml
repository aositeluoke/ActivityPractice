<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aositeluoke.activitypractice">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/app_theme">
        <activity
            android:name=".MainActivity"
            android:theme="@style/app_theme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- 右进右出 -->
        <activity
            android:name=".RightInRightOutActivity"
            android:theme="@style/activity_theme_right_int_out" />

        <!-- Activity使用Dialog主题 -->
        <activity
            android:name=".DialogActivity"
            android:theme="@style/activity_theme_dialog_bottom2top" />

        <!-- 透明度主题 -->
        <activity
            android:name=".AlphaActivity"
            android:theme="@style/activity_theme_alpha" />

        <!-- 缩放主题 -->
        <activity
            android:name=".ScaleActivity"
            android:theme="@style/activity_theme_scale" />
        <activity
            android:name=".BottomInOutActivity"
            android:theme="@style/activity_theme_bottom2top" />
    </application>

</manifest>